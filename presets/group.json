{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchCategories": ["ci"],
      "groupName": "CI dependencies (non-major)"
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "npm development dependencies (non-major)"
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies", "optionalDependencies"],
      "groupName": "npm production dependencies (non-major)"
    },
    {
      "matchManagers": ["npm"],
      "matchDepNames": ["{npm:,}@taiyme/**"],
      "groupName": null
    }
  ]
}
